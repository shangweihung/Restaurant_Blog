<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      
      <form action="/search">
        <h4 class="mb-2" style="font-weight: 700;">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>

        <hr>
        <div style="display: inline-block; padding:0.5em">
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">排序依據</span>
            </div>
            <label class="btn btn-outline-secondary {{#ifEquals 'name' query.key}}active{{/ifEquals}}">
              <input type="radio" name="key" id="option1" autocomplete="off" value="name" {{#ifEquals 'name' query.key}}checked{{/ifEquals}}>依餐廳名稱
            </label>
            <label class="btn btn-outline-secondary {{#ifEquals 'rating' query.key}}active{{/ifEquals}}">
              <input type="radio" name="key" id="option2" autocomplete="off" value="rating" {{#ifEquals 'rating' query.key}}checked{{/ifEquals}}>依評價
            </label>
          </div>
        </div>
        <div style="display: inline-block; padding:0.5em">
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">排列順序</span>
          </div>
          <label class="btn btn-outline-secondary {{#ifEquals 'asc' query.order}}active{{/ifEquals}}">
            <input type="radio" name="order" id="option1" autocomplete="off" value="asc" {{#ifEquals 'asc' query.order}}checked{{/ifEquals}}>Ascend
          </label>
          <label class="btn btn-outline-secondary {{#ifEquals 'desc' query.order}}active{{/ifEquals}}">
            <input type="radio" name="order" id="option1" autocomplete="off" value="desc" {{#ifEquals 'desc' query.order}}checked{{/ifEquals}}>Descend
          </label>
        </div>
        </div>

      </form>
    
    </div>
  </div>
</div>

<div class="container" align="right" style="font-weight: 600;"> {{showkeyword}}{{ByKey}} {{ByOrder}}</div>
<div class="container">
    {{!-- Add icon --}}
    <div class="btn-group mb-3">
      <a class="btn btn-info mr-4" href="/restaurants/new" role="button">Add restaurant</a>
    </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">

    {{#each restaurantList}}
    <div class="col-md-4">
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
        </a>  
      </div>
      {{/each}}
  </div>
</div>