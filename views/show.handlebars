<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">

      {{!-- Edit and Delete icon --}}
      <div class="button-group mb-3">
        <a class="btn btn-dark px-4 mr-4" href="/" role="button"><i class="fas fa-angle-left mr-2 fa-lg"></i>Back</a>
        <a class="btn btn-info px-5 mr-4" href="/restaurants/{{{restaurant.id}}}/edit" role="button">Edit</a>
        <form action="/restaurants/{{{restaurant.id}}}/delete?_method=DELETE" method="POST" class="d-inline mb-4">
          <button type="submit" class="delete-btn btn btn-warning"
            onclick="return confirm('Are you sure you want to delete this item?');">
            <i class=" fas fa-trash-alt fa-lg"></i><span>Delete</span>
          </button>
        </form>
      </div>

      {{!-- restaurant detail --}}


      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mt-3 mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>